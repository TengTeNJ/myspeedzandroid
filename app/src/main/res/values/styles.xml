<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="MyDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- loading proess style -->
    <style name="myProgressBarStyleSmall"  >
        　　<item name="android:indeterminateDrawable">@drawable/loading_proess_style</item>
        　　<item name="android:minWidth">50dip</item>
        　　<item name="android:maxWidth">50dip</item>
        　　<item name="android:minHeight">50dip</item>
        　　<item name="android:maxHeight">50dip</item>
    </style>
    !--设置小-->
    <style name="set_little_style">
        <item name="android:textSize">13dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">20dip</item>
    </style>
    <!--设置大-->
    <style name="set_style">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">@color/set_color</item>
        <item name="android:layout_marginLeft">20dip</item>
    </style>


    <style name="set_tips_title_style">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="set_tips_message_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="set_tips_bottom_style">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/set_tips_bottom_bg</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>
