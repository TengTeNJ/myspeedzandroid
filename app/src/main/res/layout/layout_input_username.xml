<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_login_text_info"
            android:textSize="14sp"
            android:textColor="@color/main_listviewtext_color"
            />
        <EditText
            android:id="@+id/edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_login_edit_info"
            android:hint="@string/user_name"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_new_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_login_text_info"
            android:textSize="14sp"
            android:textColor="@color/main_listviewtext_color"
            />
        <EditText
            android:id="@+id/edit_user1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_login_edit_info"
            android:hint="@string/user_name1"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>
</LinearLayout>